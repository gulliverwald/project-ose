{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Desktop",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/desktop/src/platforms/desktop/game",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/desktop/src/platforms/desktop",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Desktop",
            "miDebuggerPath": "/usr/bin/gdb",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe"
            }
        }
    ]
}